@page
@model Autopark.Areas.Manager.Pages.Vehicles.DeleteModel
@{
    ViewData["Title"] = Model._vehicle.Name;
}

<form method="post">
    <h2 class="mb-10">Delete vehicle</h2>
    <div class="form-group row mb-3">
        <label class="col-sm-2 col-form-label" asp-for="_vehicle.Id"></label>
        <div class="col-sm-10">
            <input class="form-control" asp-for="_vehicle.Id" readonly />
        </div>
    </div>
    <div class="form-group row mb-3">
        <label class="col-sm-2 col-form-label" asp-for="_vehicle.Enterprise"></label>
        <div class="col-sm-10">
            <input asp-for="_vehicle.EnterpriseId" hidden />
            <input class="form-control" asp-for="_vehicle.Enterprise.Name" disabled />
        </div>
    </div>
    <div class="form-group row mb-3">
        <label class="col-sm-2 col-form-label" asp-for="_vehicle.Name"></label>
        <div class="col-sm-10">
            <input class="form-control" asp-for="_vehicle.Name" disabled />
        </div>
    </div>
    <div class="form-group row mb-3">
        <label class="col-sm-2 col-form-label" asp-for="_vehicle.Brand"></label>
        <div class="col-sm-10">
            <input class="form-control" asp-for="_vehicle.BrandId" disabled />
        </div>
    </div>
    <div class="form-group row mb-3">
        <label class="col-sm-2" asp-for="_vehicle.ZeroToHundred"></label>
        <div class="col-sm-10">
            <input class="form-control" asp-for="_vehicle.ZeroToHundred" disabled />
        </div>
    </div>
    <div class="form-group row mb-3">
        <label class="col-sm-2" asp-for="_vehicle.Mileage"></label>
        <div class="col-sm-10">
            <input class="form-control" asp-for="_vehicle.Mileage" disabled />
        </div>
    </div>
    <div class="form-group row mb-3">
        <label class="col-sm-2" asp-for="_vehicle.Year"></label>
        <div class="col-sm-10">
            <input class="form-control" asp-for="_vehicle.Year" disabled />
        </div>
    </div>
    <div class="form-group row mb-3">
        <label class="col-sm-2" asp-for="_vehicle.HorsePower"></label>
        <div class="col-sm-10">
            <input class="form-control" asp-for="_vehicle.HorsePower" disabled />
        </div>
    </div>
    <div class="form-group row mb-3">
        <label class="col-sm-2" asp-for="_vehicle.Price"></label>
        <div class="col-sm-10">
            <input class="form-control" asp-for="_vehicle.Price" disabled />
        </div>
    </div>
    <div class="form-group row mb-3">
        <label class="col-sm-2" asp-for="_vehicle.Driver"></label>
        <div class="col-sm-10">
            @if (Model._vehicle.Driver == null)
            {
                <input class="form-control" value="No driver" disabled />
            }
            else
            {
                <input class="form-control" asp-for="_vehicle.Driver.Name" disabled />
            }
        </div>
    </div>
    <ul class="list-group">
        @foreach (var driver in Model._drivers)
        {
            <li class="list-group-item">@driver.Name</li>
        }
    </ul>

    <div class="btn-group mt-3">
        <a class="btn btn-secondary" asp-area="Manager" asp-page="/Vehicles/Index" asp-route-enterpriseId=@Model._vehicle.EnterpriseId>
            Back
        </a>
        <button class="btn btn-danger" type="submit">Delete</button>
    </div>
</form>